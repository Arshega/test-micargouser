<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="center">
        <shape android:shape="oval">
            <size
                android:width="70dp"
                android:height="70dp" />

            <solid android:color="@color/rating_selected_secondary_background" />
        </shape>
    </item>

    <item
        android:bottom="7dp"
        android:gravity="center"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp">
        <shape android:shape="oval">
            <size
                android:width="60dp"
                android:height="60dp" />

            <solid android:color="@color/rating_selected_background" />
        </shape>
    </item>

    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/star_selected" />
    </item>

</layer-list>